<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComposeTweet">

    <ImageView
        android:id="@+id/returnImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        tools:srcCompat="@drawable/cancel" />

    <TextView
        android:id="@+id/userNameCompose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/userImageCompose"
        android:text="TextView" />

    <TextView
        android:id="@+id/goWithCompose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userNameCompose"
        android:layout_toLeftOf="@+id/userImageCompose"
        android:layout_marginRight="10dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/userImageCompose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/textCompose"
        android:layout_width="match_parent"
        android:minLines="5"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userImageCompose"
        android:ems="10"
        android:inputType="textMultiLine"
        />

    <Button
        android:id="@+id/tweetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textCompose"
        android:layout_alignParentRight="true"
        android:background="@color/aqua"
        android:text="Tweet" />

    <TextView
        android:id="@+id/countCompose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textCompose"
        android:layout_toLeftOf="@+id/tweetButton"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:text="TextView" />


</RelativeLayout>